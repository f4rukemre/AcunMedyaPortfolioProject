
@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="container my-4">
    <h2 class="text-center mb-4">Admin Paneli - İstatistikler</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Proje</h5>
                    <p class="card-text">@ViewBag.Totalprojects</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Referanslar</h5>
                    <p class="card-text">4</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kategori</h5>
                    <p class="card-text">@ViewBag.TotalCategories</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Deneyim Sayısı</h5>
                    <p class="card-text">@ViewBag.TotalExperiences</p>
                </div>
            </div>
        </div>
    </div>
</div>