
@model List<AcunMedyaPortfoliaProject.Models.Categories>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Kategori Yönetimi</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Kategori İsmi</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td><a href="/Category/UpdateCategory/@category.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Category/DeleteCategory/@category.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
        <a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
</div>
