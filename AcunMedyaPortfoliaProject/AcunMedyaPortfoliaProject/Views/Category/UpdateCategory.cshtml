@model AcunMedyaPortfoliaProject.Models.Categories
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <label>Kategori Adı</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
        <br />
        <button class="btn btn-info">Kategoriyi Güncelle</button>
    </form>
</div>

