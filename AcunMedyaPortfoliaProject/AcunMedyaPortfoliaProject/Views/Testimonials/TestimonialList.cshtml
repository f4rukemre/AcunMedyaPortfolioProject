@model List<AcunMedyaPortfoliaProject.Models.Testimonials>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Yorumlar Yönetimi</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Ad Soyad</th>
                <th>Başlık</th>
                <th>Resim Url</th>
                <th>Yorum</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var testimonial in Model)
            {
                <tr>
                    <td>@testimonial.Id</td>
                    <td>@testimonial.NameSurname</td>
                    <td>@testimonial.Title</td>
                    <td>@testimonial.ImageUrl</td>
                    <td>@testimonial.Comment</td>
                    <td><a href="/Testimonials/UpdateTestimonial/@testimonial.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Testimonials/DeleteTestimonial/@testimonial.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
        <a href="/Testimonials/CreateTestimonial" class="btn btn-primary">Yeni Yorum Ekle</a>
</div>
