@model List<AcunMedyaPortfoliaProject.Models.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Hakkımda</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Resim</th>
                <th>CV Link</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var about in Model)
            {
                <tr>
                    <td>@about.AboutID</td>
                    <td>@about.Title</td>
                    <td>@about.Description</td>
                    <td><img src="@about.ImageUrl" alt="Resim" class="img-fluid" style="width: 100px; height: auto;"></td>
                    <td><a href="@about.CVLink" target="_blank" class="btn btn-info">İncele</a></td>
                    <td><a href="/About/UpdateAbout/@about.AboutID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/About/DeleteAbout/@about.AboutID" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
        <a href="/About/CreateAbout" class="btn btn-primary">Yeni Açıklama Ekle</a>
</div>